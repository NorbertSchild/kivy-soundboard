#kivy 1.8.1
#:import FadeTransition kivy.uix.screenmanager.FadeTransition


<SoundBoard>:
    FloatLayout:
        canvas:
            Color:
                rgba: 0, 0, 0, 0
            Rectangle:
                size: root.size
                pos: root.pos
                #source: "gras.jpg"
        margin: (root.width/50)
        orientation: 'horizontal'
        pos_hint: {'center_x':.5, 'center_y':.5}
        Label:
            text:'CALL OF THE GUINEA PIGS'
            pos_hint: {'center_x':.50, 'center_y':.90}
            color: 1,0.5,0.5,1
            font_size: root.width*0.05
            font_name:'Fonts//GUINEAPIGS.TTF'
        ToggleButton:
            id: 1
            pos_hint: {'center_x':.24, 'center_y':.70}
            size_hint_y: 0.25
            size_hint_x: 0.25
            background_normal: "Images//Cavia1.jpg"
            background_down:'Images//Cavia1_Down.jpg'
            on_press: root.plays('Cavia1.mp3')
            border: (1, 1, 1, 1)
            group: 'audio'
